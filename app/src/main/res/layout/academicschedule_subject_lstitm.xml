<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.constraint.Guideline android:id="@+id/academic_shedule_list_top" app:layout_constraintGuide_percent="0.04"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         />
    <android.support.constraint.Guideline android:id="@+id/academic_shedule_list_start" app:layout_constraintGuide_percent="0.05"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content" />
    <android.support.constraint.Guideline android:id="@+id/academic_shedule_list_end" app:layout_constraintGuide_percent="0.92"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/academic_shedule_list_start"
        app:layout_constraintEnd_toStartOf="@id/academic_shedule_list_end"
        app:layout_constraintTop_toBottomOf="@id/academic_shedule_list_top">

        <TextView android:id="@+id/achademicschedule_subject_txtv_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distributed Computer Systems"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18.5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:text=" "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView android:id="@+id/academic_shedule_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=" 09:30"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView android:id="@+id/academic_shedule_hall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text=" 1220"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView android:id="@+id/academic_shedule_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text=" 3,1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView android:id="@+id/academic_shedule_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text=" CS"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>