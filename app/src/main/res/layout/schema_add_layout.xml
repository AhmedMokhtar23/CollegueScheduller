<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline android:id="@+id/schema_add_general_1_start" app:layout_constraintGuide_percent=".1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/schema_add_general_1_end" app:layout_constraintGuide_percent=".485"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline android:id="@+id/schema_add_general_2_start" app:layout_constraintGuide_percent=".515"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/schema_add_general_2_end" app:layout_constraintGuide_percent=".9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline android:id="@+id/schema_add_title_top" app:layout_constraintGuide_percent=".05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/schema_add_title_start" app:layout_constraintGuide_percent=".07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENERAL INFO"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/app_background_2"
        app:layout_constraintStart_toEndOf="@id/schema_add_title_start"
        app:layout_constraintTop_toBottomOf="@id/schema_add_title_top"/>

    <android.support.constraint.Guideline android:id="@+id/schema_add_box1_top" app:layout_constraintGuide_percent=".15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_add_general_1_start"
        app:layout_constraintEnd_toStartOf="@id/schema_add_general_1_end"
        app:layout_constraintTop_toBottomOf="@id/schema_add_box1_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textSize="13sp"/>
        <Spinner android:id="@+id/schema_add_year_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_add_general_2_start"
        app:layout_constraintEnd_toStartOf="@id/schema_add_general_2_end"
        app:layout_constraintTop_toBottomOf="@id/schema_add_box1_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester"
            android:textSize="13sp"/>
        <Spinner android:id="@+id/schema_add_semester_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/schema_add_box2_top" app:layout_constraintGuide_percent=".26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_add_general_1_start"
        app:layout_constraintEnd_toStartOf="@id/schema_add_general_1_end"
        app:layout_constraintTop_toBottomOf="@id/schema_add_box2_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialization"
            android:textSize="13sp"/>
        <Spinner android:id="@+id/schema_add_specialization_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_add_general_2_start"
        app:layout_constraintEnd_toStartOf="@id/schema_add_general_2_end"
        app:layout_constraintTop_toBottomOf="@id/schema_add_box2_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hall"
            android:textSize="13sp"/>
        <Spinner android:id="@+id/schema_add_hall_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/schema_add_box3_top" app:layout_constraintGuide_percent=".37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_add_general_1_start"
        app:layout_constraintEnd_toStartOf="@id/schema_add_general_1_end"
        app:layout_constraintTop_toBottomOf="@id/schema_add_box3_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Students"
            android:textSize="13sp"/>
        <EditText android:id="@+id/schema_add_number_of_students_editxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="820"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_add_general_2_start"
        app:layout_constraintEnd_toStartOf="@id/schema_add_general_2_end"
        app:layout_constraintTop_toBottomOf="@id/schema_add_box3_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Sections"
            android:textSize="13sp"/>
        <EditText android:id="@+id/schema_add_number_of_sections_editx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/schema_add_title2_top" app:layout_constraintGuide_percent=".52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEACHING SUBJECTS"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/app_background_2"
        app:layout_constraintStart_toEndOf="@id/schema_add_title_start"
        app:layout_constraintTop_toBottomOf="@id/schema_add_title2_top"/>

    <android.support.constraint.Guideline android:id="@+id/schema_add_list_v_top" app:layout_constraintGuide_percent=".6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/schema_add_list_v_bottom" app:layout_constraintGuide_percent=".8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <ListView android:id="@+id/schema_add_lstv_subjects"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/schema_add_list_v_top"
        app:layout_constraintBottom_toTopOf="@id/schema_add_list_v_bottom"
        app:layout_constraintStart_toEndOf="@id/schema_add_general_1_start"
        app:layout_constraintEnd_toStartOf="@id/schema_add_general_2_end"/>

    <android.support.constraint.Guideline android:id="@+id/schema_add_box4_top" app:layout_constraintGuide_percent=".83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/schema_add_title_start"
        app:layout_constraintEnd_toStartOf="@id/schema_add_general_2_end"
        app:layout_constraintTop_toBottomOf="@id/schema_add_box4_top">
        <Spinner android:id="@+id/schema_add_select_subject_spinner"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_gravity="center"/>

        <TextView android:id="@+id/schema_add_btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ADD"
            android:textSize="13sp"
            android:textColor="@android:color/black"/>

    </LinearLayout>


    <android.support.constraint.Guideline android:id="@+id/schema_add_button_top" app:layout_constraintGuide_percent=".9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/schema_add_button_bottom" app:layout_constraintGuide_percent=".97"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/schema_add_button_start" app:layout_constraintGuide_percent=".6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/schema_add_button_end" app:layout_constraintGuide_percent=".9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <Button android:id="@+id/schema_add_btn_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="SAVE"
        android:textColor="@android:color/white"
        android:background="@color/app_background"
        app:layout_constraintTop_toBottomOf="@id/schema_add_button_top"
        app:layout_constraintBottom_toTopOf="@id/schema_add_button_bottom"
        app:layout_constraintStart_toEndOf="@id/schema_add_button_start"
        app:layout_constraintEnd_toStartOf="@id/schema_add_button_end"/>





</android.support.constraint.ConstraintLayout>