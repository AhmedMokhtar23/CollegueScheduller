<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline android:id="@+id/schema_view_general_1_start" app:layout_constraintGuide_percent=".1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/schema_view_general_1_end" app:layout_constraintGuide_percent=".485"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline android:id="@+id/schema_view_general_2_start" app:layout_constraintGuide_percent=".515"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <android.support.constraint.Guideline android:id="@+id/schema_view_general_2_end" app:layout_constraintGuide_percent=".9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <android.support.constraint.Guideline android:id="@+id/schema_view_title_top" app:layout_constraintGuide_percent=".05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/schema_view_title_start" app:layout_constraintGuide_percent=".07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENERAL INFO"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/app_background_2"
        app:layout_constraintStart_toEndOf="@id/schema_view_title_start"
        app:layout_constraintTop_toBottomOf="@id/schema_view_title_top"/>

    <android.support.constraint.Guideline android:id="@+id/schema_view_box1_top" app:layout_constraintGuide_percent=".15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_view_general_1_start"
        app:layout_constraintEnd_toStartOf="@id/schema_view_general_1_end"
        app:layout_constraintTop_toBottomOf="@id/schema_view_box1_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textSize="13sp"/>
        <TextView android:id="@+id/schema_view_txtv_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_view_general_2_start"
        app:layout_constraintEnd_toStartOf="@id/schema_view_general_2_end"
        app:layout_constraintTop_toBottomOf="@id/schema_view_box1_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester"
            android:textSize="13sp"/>
        <TextView android:id="@+id/schema_view_txtv_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/schema_view_box2_top" app:layout_constraintGuide_percent=".29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_view_general_1_start"
        app:layout_constraintEnd_toStartOf="@id/schema_view_general_1_end"
        app:layout_constraintTop_toBottomOf="@id/schema_view_box2_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialization"
            android:textSize="13sp"/>
        <TextView android:id="@+id/schema_view_txtv_specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_view_general_2_start"
        app:layout_constraintEnd_toStartOf="@id/schema_view_general_2_end"
        app:layout_constraintTop_toBottomOf="@id/schema_view_box2_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hall"
            android:textSize="13sp"/>
        <TextView android:id="@+id/schema_view_txtv_hall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/schema_view_box3_top" app:layout_constraintGuide_percent=".4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_view_general_1_start"
        app:layout_constraintEnd_toStartOf="@id/schema_view_general_1_end"
        app:layout_constraintTop_toBottomOf="@id/schema_view_box3_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Students"
            android:textSize="13sp"/>
        <TextView android:id="@+id/schema_view_number_of_txtv_students"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="820"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/schema_view_general_2_start"
        app:layout_constraintEnd_toStartOf="@id/schema_view_general_2_end"
        app:layout_constraintTop_toBottomOf="@id/schema_view_box3_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Sections"
            android:textSize="13sp"/>
        <TextView android:id="@+id/schema_view_number_of_txtv_sections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <android.support.constraint.Guideline android:id="@+id/schema_view_title2_top" app:layout_constraintGuide_percent=".55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEACHING SUBJECTS"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/app_background_2"
        app:layout_constraintStart_toEndOf="@id/schema_view_title_start"
        app:layout_constraintTop_toBottomOf="@id/schema_view_title2_top"/>

    <android.support.constraint.Guideline android:id="@+id/schema_view_list_v_top" app:layout_constraintGuide_percent=".61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:id="@+id/schema_view_list_v_bottom" app:layout_constraintGuide_percent=".9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <ListView android:id="@+id/schema_view_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/schema_view_general_1_start"
        app:layout_constraintEnd_toStartOf="@id/schema_view_general_2_end"
        app:layout_constraintTop_toBottomOf="@id/schema_view_list_v_top"
        app:layout_constraintBottom_toTopOf="@id/schema_view_list_v_bottom"/>
</android.support.constraint.ConstraintLayout>